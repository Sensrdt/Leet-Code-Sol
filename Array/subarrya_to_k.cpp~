class Solution {
public:
    int subarraySum(vector<int>& nums, int k) {
	
	    int n = nums.size();
	    unordered_map<int, int> mp;

	    int prefix = 0, ans = 0;

	    for (int i=0; i<n; i++)
	    {
		    prefix += nums[i];
		    int find = prefix - k;
		    ans += mp[find];
		    mp[find]++;
	    }

	    return ans;
	    // S[L....R] = P[R] - P[L-1]
	}
};
